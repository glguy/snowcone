{
    "version": 6,
    "configurePresets": [
        {
            "name": "debian-gcc",
            "description": "Configure for Debian Bookworm",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "On"
            },
            "environment": {
                "CC": "gcc-11",
                "CXX": "g++-11"
            }
        },
        {
            "name": "arm-mac",
            "displayName": "",
            "description": "Configure for Apple Silicon macOS",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "On"
            },
            "environment": {
                "PKG_CONFIG_PATH": "/opt/homebrew/opt/ncurses/lib/pkgconfig"
            }
        },
        {
            "name": "intel-mac",
            "displayName": "",
            "description": "Configure for x86_64 macOS",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "On"
            },
            "environment": {
                "PKG_CONFIG_PATH": "/usr/local/opt/ncurses/lib/pkgconfig"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debian-gcc",
            "configurePreset": "debian-gcc"
        },
        {
            "name": "arm-mac",
            "configurePreset": "arm-mac"
        },
        {
            "name": "intel-mac",
            "configurePreset": "intel-mac"
        }
    ],
    "testPresets": [
        {
            "name": "debian-gcc",
            "configurePreset": "debian-gcc"
        },
        {
            "name": "arm-mac",
            "configurePreset": "arm-mac"
        },
        {
            "name": "intel-mac",
            "configurePreset": "intel-mac"
        }
    ]
}
