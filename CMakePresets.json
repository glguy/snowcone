{
    "version": 6,
    "configurePresets": [
        {
            "name": "linux",
            "description": "Configure for Debian Bookworm",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "On"
            }
        },
        {
            "name": "arm-mac",
            "displayName": "",
            "description": "Configure for Apple Silicon macOS",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "On"
            },
            "environment": {
                "PKG_CONFIG_PATH": "/opt/homebrew/opt/ncurses/lib/pkgconfig"
            }
        },
        {
            "name": "intel-mac",
            "displayName": "",
            "description": "Configure for x86_64 macOS",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "On"
            },
            "environment": {
                "PKG_CONFIG_PATH": "/usr/local/opt/ncurses/lib/pkgconfig"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux",
            "configurePreset": "linux"
        },
        {
            "name": "arm-mac",
            "configurePreset": "arm-mac"
        },
        {
            "name": "intel-mac",
            "configurePreset": "intel-mac"
        }
    ],
    "testPresets": [
        {
            "name": "linux",
            "configurePreset": "linux"
        },
        {
            "name": "arm-mac",
            "configurePreset": "arm-mac"
        },
        {
            "name": "intel-mac",
            "configurePreset": "intel-mac"
        }
    ]
}
